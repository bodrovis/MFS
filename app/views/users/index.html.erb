<h1>Список пользователей</h1>

<%= will_paginate %>

<ul id="users-list">
  <% @users.each do |user| %>
      <li>
        <%= image_tag user.image_url %> <%= link_to user.name, user_path(user) %>
        <% if user.role == 'admin' %>
            <span class="label label-info">admin</span>
        <% end %>
        <% if user == current_user %>
            <small>(это вы)</small>
        <% else %>
            (<%= link_to 'Редактировать', edit_user_path(user) %> |
            <%= link_to 'Удалить', user_path(user), method: :delete,
                        confirm: 'Вы уверены? Будет удалён пользователь, а также все его отзывы и голоса!' %>)
        <% end %>
      </li>
  <% end %>
</ul>

<%= will_paginate %>